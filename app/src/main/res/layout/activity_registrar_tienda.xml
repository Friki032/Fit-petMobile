<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:padding="20dp"
        android:layout_width="match_parent" android:layout_height="wrap_content">

        <!-- Logo obligatorio -->
        <ImageView
            android:id="@+id/ivLogoPreview"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/logofitpet"
        android:background="@android:color/darker_gray"
        android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp"
        android:contentDescription="Logo de tienda"/>

        <Button
            android:id="@+id/btnElegirLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elegir logo"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/etNombreTienda"
            android:hint="Nombre"
            android:textColorHint="#FF000000"
            android:textColor="#FF000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etDescripcionTienda"
            android:hint="Descripción"
            android:textColorHint="#FF000000"
            android:textColor="#FF000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etDireccionTienda"
            android:hint="Dirección"
            android:textColorHint="#FF000000"
            android:textColor="#FF000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etTelefonoTienda"
            android:hint="Teléfono"
            android:inputType="phone"
            android:textColorHint="#FF000000"
            android:textColor="#FF000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btnRegistrarTienda"
            android:text="Registrar tienda"
            android:textColor="#FF000000"
            android:backgroundTint="#FFFFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>